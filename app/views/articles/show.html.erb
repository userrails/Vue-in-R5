<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @article.description %>
</p>

<div>
  <p>Discussions</p>

  <table border="1">
    <tr>
      <th>Title</th>
      <th>Description</th>
    </tr>
    <% @article.discussions.each do |discussion| %>
      <tr>
        <td><%= discussion.title %></td>
        <td><%= discussion.description %></td>
      </tr>
    <% end %>
  </table>
</div>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
