<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @article.description %>
</p>

<div>
  <p>Discussions</p>

  <% @article.discussions.each do |discussion| %>
    <p><%= discussion.title %></p>
    <p><%= discussion.description %></p>
  <% end %>
</div>

<%= link_to 'Edit', edit_article_path(@article) %> |
