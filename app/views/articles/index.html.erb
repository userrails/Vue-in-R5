<div id="article-list">
  <input type="text" v-model="keyword" @keyup="search" />

  <p id="notice"><%= notice %></p>

  <h1>Articles</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <tr v-for="article in articles" :key="article.id">
        <td>{{article.title}}</td>
        <td>{{article.description}}</td>
      </tr>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Article', new_article_path %>
