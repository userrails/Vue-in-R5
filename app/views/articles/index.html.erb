<%= content_for :head do %>
  <%= javascript_pack_tag "articles/article_index_vue", 'data-turbolinks-track': 'reload' %>
<% end %>

<div id="article-list">
  <input type="text" v-model="keyword" @keyup="search" />

  <p id="notice"><%= notice %></p>

  <h1>Articles</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <tr v-for="article in articles" :key="article.id">
        <td>{{article.title}}</td>
        <td>{{article.description}}</td>
        <td><a v-bind:href="'/articles/' + article.id">Show</a></td>
        <td><a :href="`/articles/${article.id}/edit`">Edit</a></td>
        <td><a :href="`/articles/${article.id}/edit_article_nested`">Edit nested 1</a></td>
      </tr>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Article', new_article_path %> | <%= link_to 'Add with Nested', add_article_nested_articles_path %>
